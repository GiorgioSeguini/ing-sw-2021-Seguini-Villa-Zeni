              <items>
                 <FXCollections fx:factory="observableArrayList">
                 <Integer fx:value = "1" />
                 <Integer fx:value = "2" />
                 <Integer fx:value = "3" />
                 <Integer fx:value = "4" />
                 </FXCollections>
              </items>
      </ChoiceBox>
   </children>
