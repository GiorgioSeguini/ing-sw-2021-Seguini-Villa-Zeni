<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="anchorPane" prefHeight="692.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.BaseMeController"
            stylesheets="@Style.css" styleClass="basePane">
    <ImageView fx:id="board" fitHeight="629.0" layoutX="20.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@../images/board/Masters_of_Renaissance_PlayerBoard.png"/>
    </ImageView>
    <Button fx:id="market" layoutX="24.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToMarket" text="Mercato"
            styleClass="baseButton"/>
    <Button fx:id="dashboard" layoutX="107.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToDashboard"
            text="Dashboard" styleClass="baseButton"/>
    <Button fx:id="production" layoutX="210.0" layoutY="10.0" mnemonicParsing="false" onAction="#activeProduction"
            text="Produci" styleClass="baseButton"/>
    <Button fx:id="exit" disable="true" layoutX="220.0" layoutY="10.0" mnemonicParsing="false"
            onAction="#exitProduction" text="Esci" visible="false" styleClass="baseButton"/>
    <Button fx:id="confirm" disable="true" layoutX="20.0" layoutY="10.0" mnemonicParsing="false"
            onAction="#confirmProduction" text="Conferma" visible="false" styleClass="baseButton"/>
    <Button fx:id="endTurn" layoutX="378.0" layoutY="10.0" mnemonicParsing="false" onAction="#endTurn" text="Fine"
            styleClass="baseButton"/>
    <Button fx:id="other" layoutX="301.0" layoutY="10.0" mnemonicParsing="false" text="Altri" onAction="#goToOther"
            styleClass="baseButton"/>
</AnchorPane>
